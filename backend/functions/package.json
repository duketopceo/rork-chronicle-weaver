  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.0",
    "hono": "^3.12.0",
    "@hono/node-server": "^1.8.0",
    "@trpc/server": "^10.45.0",
    "zod": "^3.22.4",
    "stripe": "^14.0.0",
    "openai": "^4.20.0",
    "@anthropic-ai/sdk": "^0.9.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0"
  },
  "private": true
}
