{
  "name": "chronicle-weaver-functions",
  "version": "1.0.0",
  "description": "Chronicle Weaver Firebase Functions",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
