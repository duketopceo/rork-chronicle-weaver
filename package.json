{
  "name": "chronicle-weaver",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "description": "A historical role-playing game with AI-powered narrative generation",
  "author": "Chronicle Weaver Team",
  "license": "MIT",
  "scripts": {
    "start": "expo start",
    "start-web": "expo start --web",
    "start-web-dev": "DEBUG=expo* expo start --web",
    "postinstall": "patch-package",
    "build": "expo export -p web",
    "build:web": "expo export --platform web",
    "build:production": "npm run prebuild && expo export --platform web && node scripts/post-build.js",
    "build:chronicleweaver": "expo export --platform web --output-dir dist",
    "prebuild": "rimraf dist",
    "serve": "firebase serve --only hosting",
    "deploy": "npm run build:chronicleweaver && firebase deploy --only hosting",
    "deploy:preview": "npm run build:chronicleweaver && firebase hosting:channel:deploy preview",
    "post-build": "node scripts/post-build.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "analyze": "npx expo export --dump-assetmap && npx analyze-bundle",
    "clean": "rimraf dist node_modules/.cache .expo",
    "validate": "npm run type-check && npm run lint"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@hono/trpc-server": "^0.4.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/slider": "4.5.6",
    "@react-navigation/native": "^7.1.6",
    "@tanstack/react-query": "^5.81.0",
    "@trpc/client": "^11.4.2",
    "@trpc/react-query": "^11.4.2",
    "@trpc/server": "^11.4.3",
    "expo": "53.0.20",
    "expo-blur": "~14.1.4",
    "expo-constants": "~17.1.7",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-image-picker": "~16.1.4",
    "expo-linear-gradient": "~14.1.4",
    "expo-linking": "~7.1.7",
    "expo-location": "~18.1.6",
    "expo-router": "~5.1.4",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.4",
    "expo-system-ui": "~5.0.10",
    "expo-web-browser": "^14.2.0",
    "firebase": "^11.9.1",
    "hermes-engine": "^0.11.0",
    "hono": "^4.8.2",
