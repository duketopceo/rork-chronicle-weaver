/**
 * TypeScript Configuration for Chronicle Weaver v2.0
 * 
 * Purpose: Configures TypeScript compiler settings for React Native/Expo web app
 * Key Features:
 * - Strict type checking for better code quality
 * - ES2022 target for modern JavaScript features
 * - React JSX support for React Native components
 * - Path mapping for clean imports
 * - Optimized for both development and production builds
 */
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // Target ES2022 for modern JavaScript features
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    
    // Enable strict type checking
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    
    // React configuration
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    // Path mapping for clean imports
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/screens/*": ["src/app/*"],
      "@/store/*": ["src/store/*"],
      "@/services/*": ["src/services/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/constants/*": ["src/constants/*"],
      "@/assets/*": ["assets/*"]
    },
    
    // Output configuration
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    // Additional options for better development experience
    "incremental": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "assets/**/*",
    "app.json",
    "metro.config.js",
    "babel.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "web-build",
    ".expo",
    "deprecated/**/*",
    "docs_archive/**/*"
  ]
}